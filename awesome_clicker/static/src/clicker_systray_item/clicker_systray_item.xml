<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_clicker.ClickerSystray">
        <div class="o_nav_entry">
            Counter: <t t-esc="state.counter"/>
            <button class="btn btn-secondary" t-on-click="increaseCounter">
                <i class="fa fa-lg fa-plus"></i>
            </button>
            <button class="btn btn-secondary" t-on-click="decreaseCounter">
                <i class="fa fa-lg fa-minus"></i>
            </button>

            <button class="btn btn-secondary" t-on-click="openClientAction">
                Open
            </button>
        </div>
    </t>
</templates>